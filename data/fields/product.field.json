[
  {
    "type": "text",
    "name": "name",
    "aria-label": "Product Name",
    "placeholder": "e.g: Quartz Watch",
    "required": true
  },
  {
    "type": "number",
    "name": "price",
    "aria-label": "Price",
    "placeholder": "e.g: 250",
    "min": 0,
    "required": true
  },
  {
    "type": "text",
    "name": "description",
    "aria-label": "Description",
    "placeholder": "e.g: It costs a lot of money"
  },
  {
    "type": "file",
    "name": "image",
    "aria-label": "Image",
    "placeholder": "Choose a valid .jpg or .png file",
    "accept": "image/*"
  }
]